@model Proj.Models.Customer
@{
    ViewBag.Title = "Details";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ol>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (!String.IsNullOrWhiteSpace(Model.Birthday.ToString()))
    {
        string strBirth = new string((Model.Birthday.ToString()).Take(10).ToArray());
        <li>BirthDate: @strBirth</li>
    }
</ol>

