@model IEnumerable<Proj.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<body>
    <h2>Customers</h2>
    <a href="@Url.Action("AddNewCutomer", "Customer")">
        <button type="button" class="btn btn-primary"> Add Customer</button>
    </a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        @foreach (var i in Model)
        {
            <tr>
                <td>@Html.ActionLink($"{i.Name}", "Details", "Customer", new { id = i.Id }, null)</td>
                <td>@i.MembershipType.DiscountRate %</td>
                <td>@i.MembershipType.Name</td>
                <td>
                    <a href="@Url.Action("Delete", "Customer", new { id = i.Id}, null)" style="margin-left:100px;">
                        <button type="button" class="btn btn-sm btn-danger"> Delete </button>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Customer", new { id = i.Id}, null)">
                        <button type="button" class="btn btn-sm btn-dark">
                            Update
                        </button>
                    </a>
                </td>
            </tr>
        }
    </table>
    <a href="#">
        <button type="button" class="btn btn-sm btn-success">Download the List of Customers</button>
    </a>
</body>

